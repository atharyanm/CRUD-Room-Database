<?xml version="1.0" encoding="utf-8"?>
<!--TODO 5 buat resource dengan nama background_button.xml di dalam package drawable-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--TODO 6 Ketika Button ada aksi klik akan menampilkan warna blue -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_blue" />
            <corners android:radius="@dimen/_3sdp"/>
            <stroke android:color="@color/stroke"
                android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <!--TODO 7 Ketika Button tidak ada aksi klik akan menampilkan warna indigo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_color_button" />
            <corners android:radius="@dimen/_3sdp"/>
            <stroke android:color="@color/stroke"
                android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
</selector>